<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd><img src="<%= @movie.image_url %>"></dd>
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Director</dt>
      <dd>
        <a href="/directors/<%=@movie.director_id%>">
        <%=  @movie.director.name %></dd>
</a>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<ul>
  <% @movie.characters.each do |character|%>
  <li><a href="/actors/<%character.id%>"><%=character.actor.name%>
  (<%=character.name%>)</a></li>
    <%end%>
    </ul>


    <div class="row">
      <div class="col-md-12">
        <form action="/create_character" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for movie_id -->

<div>
            <input type="hidden" id="title" name="title" value="<%= Movie.find_by(:id=>@movie.id).title %>">

          </div>

          <!-- Label and input for actor_id -->
          <div class="form-group">
            <label for="actor_id" class="control-label">
              Actor
            </label>

<input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.actor %>">
 </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Character Name
            </label>

            <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
          </div>

          <button class="btn btn-success">
            Create Character
          </button>
          or
          <a href="/characters">Cancel</a>
        </form>
      </div>
    </div>
